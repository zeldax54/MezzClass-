@model MezzClass0._1.Models.TParametro

@{
    ViewBag.Title = "Editar";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 class="titulos">Parametro</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdParametro)

        <div class="form-group">
            @Html.LabelFor(model => model.NombParametro, "Nombre", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombParametro, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.NombParametro, "", new {@class = "text-danger"})
              
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.descripcion, "Descripcion", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control",@max="10",@min="1",@title="El peso debe estar entre 1 y 10" } })
                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            <input type="text" hidden="" name="IdUniverso" value="@ViewBag.IdUniverso" />

        </div>
        @if (ViewBag.error != null)
        {
            <div class="alert-danger form-control" style="width: 600px">@ViewBag.error</div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="botoncrear" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index",new{id=Model.IdUniverso},new{@class="botonlink"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
