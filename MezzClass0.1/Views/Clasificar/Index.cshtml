
@{
    ViewBag.Title = "Clasificar";
}

<h4 class="titulos">Clasficar Problemas Universo @ViewBag.universo</h4>

<div id="gif" style="float: right" hidden="">
    <img src="~/Content/Images/ajax-loader.gif" alt="Buscando"/>
</div>
@{var grid = new WebGrid(ViewBag.problemas, canPage: true, rowsPerPage: 20);
grid.Pager(WebGridPagerModes.All);
    <table>
        <tr>
            <td><label>Categor&iacute;a</label>
                <select class="dropdown-toggle">
                    <option>Agricultura</option>
                    <option>Industria</option>
                    <option>Econom&iacute;a</option>
                </select></td>
            <td style="width: 20px"></td>
            <td><label>Aplicaci&oacute;n</label>
                <select class="dropdown-toggle">
                    <option>Apicultura</option>
                    <option>Cultivo de Tub&eacute;rculos</option>
                    <option>Cultivo de Hortalizas</option>
                </select></td>
        </tr>
    </table>



                            }
<div id="">
    @grid.GetHtml(

        tableStyle: "webgrid-table",
        headerStyle: "webgrid-header",
        footerStyle: "webgrid-footer",
        alternatingRowStyle: "webgrid-alternating-row",
        rowStyle: "webgrid-row-style",
        columns: grid.Columns(

            grid.Column("IdProblema", " ",@<text> <span id="idprob" hidden="">@item.IdProblema</span></text>),
            grid.Column("titulo", "Titulo",@<text> <span id="titulo">@item.titulo</span></text>),
            grid.Column("TComplejidad.Complejidad", "Complejidad", @<text> <span id="comp">@item.ComplejidadId</span></text>),
            grid.Column("Detalles", format: @<text>
                                                <div style="text-align: left;"><button type="button" class="btn btn-default btn-sm" id="detalles">
                                                        <span class="glyphicon glyphicon-list-alt"></span>
                                                    </button>
                                                </div>
                                             </text>, style: "width:100px", canSort: false),
            grid.Column("Parametros", format: @<text>
                                                 <select class="dropdown-toggle">
                                                     <option>Todos</option>
                                                     <option>1</option>
                                                     <option>2</option>
                                                     <option>3</option>
                                                     <option>4</option>
                                                 </select>
                                              </text>, style: "width:100px", canSort: false),
       grid.Column("Similares", format: @<text>
    <button type="button" class="btn btn-default btn-sm" id="similares">
        <span class="glyphicon glyphicon-th-list"></span>
    </button>
    </text>, style: "width:100px", canSort: false))




            )
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Content/Site.js")

}

